# ========================================
# FREIRELI LOGISTICS - ENVIRONMENT VARIABLES
# ========================================

# Smart Contract Configuration
# Địa chỉ smart contract sau khi deploy lên Kairos testnet
NEXT_PUBLIC_LOGISTICS_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# WalletConnect Configuration
# Lấy Project ID từ https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Kairos Testnet Network Configuration
# RPC URL cho mạng Kairos testnet (Klaytn)
NEXT_PUBLIC_KAIROS_RPC_URL=https://rpc.ankr.com/klaytn_testnet
NEXT_PUBLIC_KAIROS_CHAIN_ID=1001
NEXT_PUBLIC_KAIROS_EXPLORER_URL=https://kairos.kaiascope.com

# Application Configuration
# Tên và mô tả ứng dụng
NEXT_PUBLIC_APP_NAME=Freireli Logistics
NEXT_PUBLIC_APP_DESCRIPTION=Hệ thống theo dõi logistics sử dụng blockchain technology

# Faucet Configuration
# URL để lấy test KLAY
NEXT_PUBLIC_FAUCET_URL=https://kairos.wallet.klaytn.foundation/faucet

# Optional: Development Configuration
# Chỉ sử dụng trong môi trường development
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false

# Optional: Analytics (nếu cần)
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Optional: API Keys (nếu cần)
# NEXT_PUBLIC_API_KEY=your_api_key
# NEXT_PUBLIC_API_URL=your_api_url


